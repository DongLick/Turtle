    up()
    
    
#nuages (dark)
def nuages2(): 
    up()
        
    
montagnes(-1000, -600)
montagnes(-600, -500)
montagnes(-200, -400)

#La valée
goto(-1000, -200)
pencolor('forestgreen')
fillcolor('forestgreen')
begin_fill()
down()
right(10)
forward(1000)
left(20)
forward(1000)
right(100)
forward(400)
right(90)
forward(2000)
end_fill()
left(180)
up()

#le chalet dans la valée
goto(-500, -350)
chalet()
up()

#sentier
right(90)
forward(50)
left(90)
forward(20)
sentier()

#quelques arbres
left(90)
arbre1(-550, -350)
arbre1(-600, -385)
arbre1(-650, -375)
arbre1(-400, -325)
for i in range (4):
    arbre2()



#le soleil               
up()                     
goto(600, 400)           
dot(70, 'yellow')
right(180)
down()
width(7)
color('yellow')
for i in range(36):
    forward(70)
    backward(70)
    left(10)
left(180)



color('white')
fillcolor('white')
pensize(5)

def nuage1(b, n):
    up()

    goto(b, n)
    for i in range (8):
        dot(40, 'white')
        forward(25)
    left(90)
    forward(20)  
    left(90)
    for i in range (10):
        dot(40, 'white')
        forward(25)  
    right(90)
    forward(20)
    right(90) 
    forward(50)
    for i in range (8):
        dot(40, 'white')
        forward(25) 
        
    left(90)
    forward(20)
    left(90)
    forward(50)    
    for i in range (6):
        dot(40, 'white')
        forward(25)  
    left(180)

for u in range (5):
    b = random.randint(-600, 700)
    n = random.randint(400, 500) 
    nuage1(b, n)

exitonclick()